{
  "installCommand": "cd backend && npm install",
  "buildCommand": "cd backend && npm run build && ls -la dist/src/",
  "functions": {
    "backend/api/index.js": {
      "maxDuration": 10,
      "includeFiles": "backend/dist/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/api" }
  ]
}