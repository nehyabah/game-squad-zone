{
  "name": "game-squad-backend",
  "version": "0.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node src/main.server.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only src/main.server.ts",
    "worker": "ts-node src/main.worker.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/main.server.js",
    "start:azure": "node dist/src/main.server.js",
    "start:ts": "ts-node src/main.server.ts",
    "type-check": "tsc --noEmit",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "migrate:prod": "node scripts/migrate-prod.js",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "simulate-results": "ts-node scripts/simulate-results.ts",
    "process-results": "ts-node scripts/process-results.ts",
    "recalc": "ts-node scripts/recalc.ts",
    "db:backup": "node scripts/backup-database.js create",
    "db:backup-list": "node scripts/backup-database.js list",
    "db:restore": "node scripts/restore-database.js interactive",
    "db:restore-file": "node scripts/restore-database.js file",
    "postinstall": "npx prisma generate",
    "prebuild:azure": "npm ci && npx prisma generate",
    "build:azure": "npm run build",
    "postbuild:azure": "echo 'Build complete for Azure'"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/error": "^4.2.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/sensible": "^6.0.3",
    "@prisma/client": "^6.15.0",
    "@sinclair/typebox": "^0.34.41",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.29.1",
    "jose": "^6.1.0",
    "mysql2": "^3.14.4",
    "node-fetch": "^3.3.2",
    "postgresql": "^0.0.1",
    "stripe": "^14.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
